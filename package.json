{
  "name": "fleur_bitume_app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^29.4.0",
    "@types/node": "^16.18.12",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "jest-environment-jsdom": "^29.4.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "create-env": "cd api && python -m venv venv && venv/Scripts/activate && pip install -r requirements.txt",
    "create-env-mac": "cd api && python3 -m venv venv && source venv/bin/activate && pip install -r requirements.txt",
    "start-api": "cd api && venv/Scripts/flask run --port=5001 --no-debugger",
    "start-api-mac": "cd api && venv/bin/flask run --port=5001 --no-debugger",
    "start-client": "react-scripts start",
    "start-client-mac": "DANGEROUSLY_DISABLE_HOST_CHECK=true react-scripts start",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "build": "react-scripts build",
    "test-client": "jest --coverage",
    "test-api":"cd api && cd venv/scripts && pytest ../../tests",
    "test-api-mac":"cd api && cd venv/bin && pytest ../../tests",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy":"http://127.0.0.1:5001",
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@jest/globals": "^29.4.3",
    "babel-jest": "^29.4.3",
    "eslint": "^8.34.0",
    "jest": "^29.4.3",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^29.0.5"
  }
}
